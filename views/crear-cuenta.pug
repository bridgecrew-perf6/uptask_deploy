doctype html
html(lang="es-CL")
    head
        include partials/header 
    body.login
        .contenedor-formulario 
            h1 Crea tu cuenta
            if locals.mensajes
                .alertas
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p=error
            form#formulario.caja.caja-login(method="POST" action="/crear-cuenta")
                .campo
                    label(for="text") Email:
                    input(type="text" name="email" placeholder="Ingresa Email" value=email )
                .campo
                    label(for="password") password:
                    input(type="password" name="password" placeholder="Ingresa password" value=password )
                .campo.enviar
                    input.boton(type="submit" value="crear cuenta")
